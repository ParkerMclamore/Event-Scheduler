  <body>
    <div class="calendar">
     <div class="header">
    <div class="logo">
      <%= image_tag("logo.png", :size => "130x75") %>

      <p><%= link_to 'Book Event', calendar_path, class: "navbar-brand" %></p>
      <p><%= link_to 'Gallery', gallery_path, class: "navbar-brand" %></p>
